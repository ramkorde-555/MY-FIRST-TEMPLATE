//1. Here's the bg color editor

.bg_color
{
background-color : #dddddd;
}


//2. Here's the bg image editor

.bg_image
{
background-image: url(#);
background-repeat: no-repeat;
background-position: right top;
background-attachment: fixed; //apply if you want scrollable image
}

//3. Here's the text color editor

.txt_color
{
color: #dddddd;
}

//4. Here's the text alignment editor

.txt_align
{
text-align : ;
}

//5. Here's the removal of underline from links

.txt_dec
{
text-decoration : none;
}

//6. Here's the line height editor
.lh
{
line-height: 1.2;
}

//7. Here's the text shadow editor
.txt-sw
{
text-shadow: 0px, 0px, #dddddd ;
}

//8. Here's the font editor

.font
{
font-family:  ;
font-size:  px ;
}

//9. Here's the border editor

.border
 {
    border-style: solid;
    border-color: #aaaaaa #dddddd;
}
